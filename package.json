{
  "name": "land-registry",
  "version": "1.0.0",
  "description": "Blockchain-based Land Registry System",
  "main": "truffle-config.js",
  "scripts": {
    "test": "truffle test",
    "compile": "truffle compile",
    "migrate": "truffle migrate",
