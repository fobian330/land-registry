    "@truffle/hdwallet-provider": "^2.1.0",
    "dotenv": "^16.4.5",
    "web3": "^1.8.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "truffle": "^5.7.0"
  }
}
